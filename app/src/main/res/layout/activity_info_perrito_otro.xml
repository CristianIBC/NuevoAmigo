<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoPerritoOtro">

        <Button
            android:id="@+id/btnVerCatalogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="48dp"
            android:layout_marginRight="48dp"
            android:text="@string/ver_catalogo"
            app:layout_constraintBottom_toTopOf="@+id/imgPerroV"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/razaPerroV"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgPerfilPerroVO"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cargando_blanco" />

        <TextView
            android:id="@+id/nombrePerroVO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="13dp"
            android:fontFamily="@font/artifika"
            android:text="Yuri Loka"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/razaPerroVO"
            app:layout_constraintStart_toEndOf="@+id/imgPerfilPerroVO"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/razaPerroVO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="50dp"
            android:text="Raza: Criolla"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/imgPerroV"
            app:layout_constraintStart_toEndOf="@+id/nombrePerroVO"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgPerroVO"
            android:layout_width="411dp"
            android:layout_height="254dp"
            android:layout_marginTop="37dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgPerfilPerroVO"
            app:srcCompat="@drawable/cargando_blanco" />

        <TextView
            android:id="@+id/descripcionPerroVO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="38dp"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="68dp"
            android:layout_marginRight="68dp"
            android:layout_marginBottom="6dp"
            android:text="Perra caraisoña"
            android:textColor="#3A3838"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/sexoPerroVO"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.613"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgPerroVO"
            app:layout_constraintVertical_bias="0.214" />

        <TextView
            android:id="@+id/sexoPerroVO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sexo: Hembra"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.839"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgPerroVO"
            app:layout_constraintVertical_bias="0.334" />

        <TextView
            android:id="@+id/edadPerroVO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="107dp"
            android:text="Edad: 6 añitos"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/sexoPerroVO"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgPerroVO" />

        <TextView
            android:id="@+id/tamañoPerroVO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Tamaño: Pequeña"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/edadPerroVO"
            app:layout_constraintHorizontal_bias="0.419"
            app:layout_constraintStart_toStartOf="@+id/edadPerroVO"
            app:layout_constraintTop_toBottomOf="@+id/edadPerroVO" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado:"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.767"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sexoPerroVO"
            app:layout_constraintVertical_bias="0.12" />

        <TextView
            android:id="@+id/estadoPerroVO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Disponible"
            android:textColor="#000000"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/sexoPerroVO"
            app:layout_constraintHorizontal_bias="0.62"
            app:layout_constraintStart_toStartOf="@+id/sexoPerroVO"
            app:layout_constraintTop_toBottomOf="@+id/sexoPerroVO" />

        <Button
            android:id="@+id/btnContactame"
            style="@style/MiBoton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:drawablePadding="5dp"
            android:gravity="center|right"
            android:text="@string/contactame"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/estadoPerroVO"
            app:layout_constraintVertical_bias="0.419" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/verificar"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnContactame"
            app:layout_constraintVertical_bias="0.157" />
</androidx.constraintlayout.widget.ConstraintLayout>