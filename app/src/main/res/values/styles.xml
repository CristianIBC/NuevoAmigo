<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
       <!-- <item name="android:windowBackground">@drawable/gradient</item> -->
        <item name="font">@font/blue_eyes</item>
    </style>
    <style name="MiBoton" parent="android:Widget.Button">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/gradient</item>
    </style>
    <style name="MiBoton.CerrarSesion">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="MiBoton.borrar">
        <item name="android:textColor">#ff0000</item>
        <item name="android:background">#ffffff</item>
    </style>
    <style name="ActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="background">@drawable/gradient_action_bar</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splashscreen</item>
    </style>

</resources>